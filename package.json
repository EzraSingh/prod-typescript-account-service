{
   "name": "accounts-service",
   "version": "0.0.1",
   "description": "Microservice to handle user authentication and accounts",
   "engines": {
      "node": ">=12.0.0.",
      "npm": "=6.0.0"
   },
   "devDependencies": {
      "@types/chai": "^4.2.11",
      "@types/mocha": "^7.0.2",
      "@types/node": "^8.0.29",
      "@types/sinon": "^9.0.0",
      "chai": "^4.2.0",
      "husky": "^4.2.5",
      "kill-port": "^1.6.0",
      "mocha": "^7.1.1",
      "nodemon": "^2.0.3",
      "prettier": "2.0.4",
      "sinon": "^9.0.2",
      "supertest": "^4.0.2",
      "ts-loader": "^7.0.0",
      "ts-node": "3.3.0",
      "tslint": "^6.1.1",
      "tslint-config-prettier": "^1.18.0",
      "tslint-plugin-prettier": "^2.3.0",
      "typescript": "3.3.3333",
      "webpack": "^4.42.1",
      "webpack-cli": "^3.3.11",
      "webpack-node-externals": "^1.7.2"
   },
   "dependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/body-parser": "^1.19.0",
      "@types/cors": "^2.8.6",
      "@types/helmet": "0.0.45",
      "@types/jsonwebtoken": "^8.3.9",
      "@types/morgan": "^1.9.0",
      "bcryptjs": "^2.4.3",
      "class-validator": "^0.11.1",
      "cors": "^2.8.5",
      "dotenv": "^8.2.0",
      "express": "^4.17.1",
      "express-request-id": "^1.4.1",
      "helmet": "^3.22.0",
      "http-terminator": "^2.0.2",
      "jsonwebtoken": "^8.5.1",
      "morgan": "^1.10.0",
      "pg": "^8.0.2",
      "reflect-metadata": "^0.1.10",
      "ts-node-dev": "^1.0.0-pre.44",
      "typeorm": "0.2.24",
      "validate-password": "^1.0.4"
   },
   "scripts": {
      "postinstall": "cp template.env .env",
      "clean:ports": "kill-port 5000 8080",
      "start": "node -r ts-node/register ./src/index.ts start",
      "start:dev": "nodemon",
      "test:watch": "nodemon --watch . --ext ts --exec \"npm run test\"",
      "test": "env NODE_ENV=testing mocha -r ts-node/register  src/**/*.spec.ts",
      "lint": "tslint -c tslint.json 'src/**/*.ts'",
      "lint:fix": "tslint -c tslint.json 'src/**/*.ts --fix",
      "build": "tsc",
      "bundle": "env NODE_ENV=production npm run build && webpack",
      "docker:host": "echo %DOCKER_HOST% || echo ${DOCKER_HOST}",
      "docker:dev:db": "docker-compose -f docker-compose.yml -f docker/dev/docker-compose.yml up --build",
      "docker:dev:rm": "docker rm --volumes -f accounts_pg_dev && docker volume rm accounts_pgconf accounts_pgdata accounts_pglog",
      "docker:dev": "docker-compose -f docker-compose.yml -f docker/dev/docker-compose.yml up -d --build",
      "docker:staging:build": "npm run bundle && docker-compose -f docker-compose.yml -f docker/db/docker-compose.yml -f docker/staging/docker-compose.yml build",
      "docker:staging": "docker-compose -f docker-compose.yml -f docker/db/docker-compose.yml -f docker/staging/docker-compose.yml up",
      "docker:staging:rm": "docker rm -v -f accounts_pg_staging accounts_pg_replica_staging accounts_service_staging",
      "docker:down": "docker-compose down",
      "dev": "npm run docker:dev && npm run start:dev",
      "staging": "npm run docker:staging:build && npm run docker:staging"
   },
   "nodemonConfig": {
      "ignore": [
         ".git",
         "node_modules",
         ".vscode"
      ],
      "watch": [
         "src"
      ],
      "exec": "npm start",
      "ext": "ts"
   },
   "prettier": {
      "useTabs": true,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "none",
      "bracketSpacing": true,
      "arrowParens": "avoid"
   },
   "husky": {
      "pre-commit": "tslint -c tslint.json 'src/**/*.ts'"
   }
}
