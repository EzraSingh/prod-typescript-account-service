{
   "name": "accounts-service",
   "version": "0.0.1",
   "description": "Microservice to handle user authentication and accounts",
   "engines": {
      "node": ">=12.0.0.",
      "npm": "=6.0.0"
   },
   "devDependencies": {
      "@types/chai": "^4.2.11",
      "@types/mocha": "^7.0.2",
      "@types/node": "^8.0.29",
      "@types/sinon": "^9.0.0",
      "chai": "^4.2.0",
      "chai-http": "^4.3.0",
      "kill-port": "^1.6.0",
      "mocha": "^7.1.1",
      "nodemon": "^2.0.3",
      "prettier": "2.0.4",
      "sinon": "^9.0.2",
      "ts-node": "3.3.0",
      "tslint": "^6.1.1",
      "tslint-config-prettier": "^1.18.0",
      "tslint-plugin-prettier": "^2.3.0",
      "typescript": "3.3.3333"
   },
   "dependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/body-parser": "^1.19.0",
      "@types/cors": "^2.8.6",
      "@types/helmet": "0.0.45",
      "@types/jsonwebtoken": "^8.3.9",
      "@types/morgan": "^1.9.0",
      "bcryptjs": "^2.4.3",
      "class-validator": "^0.11.1",
      "cors": "^2.8.5",
      "dotenv": "^8.2.0",
      "express": "^4.17.1",
      "express-request-id": "^1.4.1",
      "helmet": "^3.22.0",
      "http-terminator": "^2.0.2",
      "jsonwebtoken": "^8.5.1",
      "morgan": "^1.10.0",
      "pg": "^8.0.2",
      "reflect-metadata": "^0.1.10",
      "sqlite3": "^4.0.3",
      "ts-node-dev": "^1.0.0-pre.44",
      "typeorm": "0.2.24"
   },
   "scripts": {
      "clean:ports": "kill-port 5000",
      "start": "node -r ts-node/register ./src/index.ts run",
      "start:dev": "nodemon",
      "test:dev": "nodemon --watch . --ext ts --exec \"mocha -r ts-node/register src/**/*.spec.ts\"",
      "test": "mocha -r ts-node/register  src/**/*.spec.ts",
      "lint": "tslint -c tslint.json 'src/**/*.ts'",
      "lint:fix": "tslint -c tslint.json 'src/**/*.ts --fix",
      "build": "tsc",
      "docker:host": "echo %DOCKER_HOST% || echo ${DOCKER_HOST}",
      "docker:dev:build": "docker-compose -f docker-compose.yml -f docker/docker-compose.dev.yml build",
      "docker:dev": "docker-compose -f docker-compose.yml -f docker/docker-compose.dev.yml up -d",
      "docker:staging:build": "docker-compose -f docker-compose.yml -f docker/docker-compose.staging.yml build",
      "docker:staging": "docker-compose -f docker-compose.yml -f docker/docker-compose.staging.yml up",
      "docker:down": "docker-compose down",
      "dev": "npm run docker:dev && npm run start:dev"
   },
   "nodemonConfig": {
      "ignore": [
         ".git",
         "node_modules",
         ".vscode"
      ],
      "watch": [
         "src"
      ],
      "exec": "npm start",
      "ext": "ts"
   },
   "prettier": {
      "useTabs": true,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "none",
      "bracketSpacing": true,
      "arrowParens": "avoid"
   }
}
